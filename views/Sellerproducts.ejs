<!-- views/SellerProducts.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Seller Products</title>
  <link rel="stylesheet" href="stylesheets/nav.css">
  <link rel="stylesheet" href="stylesheets/seller.css">

</head>

<body>
  <%-include('./partials/nav')%>
  <h1><%= admin.username %>'s Products</h1>

  <% if (products.length > 0) { %>
      <% products.forEach(product => { %>
        <div class="card">
          <strong>Product Name:</strong> <%= product.productName %><br>
          <strong>Description:</strong> <%= product.productDescription %><br>
          <strong>Price:</strong> <%= product.productPrice %><br>
           <img src="<%= product.productImage %>" alt="<%= product.productName %> Image">
          <div class="buttons">
            <a href="/update-product/<%=product._id%>"><button>Update Product</button></a>
            <a href="/delete-product/<%=product._id%>"><button>Delete Product</button></a>
          </div>
        </div>
          
          <% }); %>
  <% } else { %>
    <p>No products available for <%= admin.username %>.</p>
  <% } %>
</body>

</html>
